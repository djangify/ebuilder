# ===========================================
# eBuilder Configuration
# ===========================================
# Copy this file to .env and update the values

# REQUIRED - Change these before running!
# ----------------------------------------
DEBUG=False
SECRET_KEY=generate-a-long-random-string-here-use-python-secrets
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Site URL (used for absolute URLs in emails, sitemaps, etc.)
SITE_URL=http://localhost:8000

# Database (SQLite - stored in data/db/ directory)
DATABASE_URL=sqlite:////app/db/db.sqlite3

# CSRF/CORS (add your domain when deploying)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# STRIPE PAYMENTS
# ----------------------------------------
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ADMIN
# ----------------------------------------
ADMIN_EMAIL=admin@example.com

# COOKIE SECURITY (set to True when using HTTPS)
# ----------------------------------------
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# EMAIL CONFIGURATION
# ----------------------------------------
# Default: Console (prints emails to Docker logs)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production SMTP, uncomment and configure:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True
# EMAIL_USE_SSL=False

DEFAULT_FROM_EMAIL=noreply@example.com